{
  "kind": "collectionType",
  "collectionName": "rca_assessments",
  "info": {
    "singularName": "rca-assessment",
    "pluralName": "rca-assessments",
    "displayName": "RCA_Assessment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "regex": "[A-Z]",
      "required": true
    },
    "class": {
      "type": "integer",
      "required": true
    },
    "assessment_type": {
      "type": "enumeration",
      "enum": [
        "Baseline",
        "MonthEnd",
        "TermEnd",
        "Practice"
      ],
      "required": true,
      "default": "Practice"
    },
    "bucket": {
      "type": "enumeration",
      "enum": [
        "E",
        "T",
        "P",
        "none"
      ],
      "required": false
    },
    "month": {
      "type": "integer",
      "required": false
    },
    "week": {
      "type": "integer",
      "required": false
    },
    "passage": {
      "type": "richtext",
      "required": true
    },
    "questions": {
      "type": "dynamiczone",
      "components": [
        "rca.mcq"
      ],
      "required": true
    }
  }
}
