{
  "kind": "collectionType",
  "collectionName": "rca_assessments",
  "info": {
    "singularName": "rca-assessment",
    "pluralName": "rca-assessments",
    "displayName": "RCA_Assessment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "regex": "[A-Z]",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "assessment_type": {
      "type": "enumeration",
      "enum": [
        "Baseline",
        "MonthEnd",
        "TermEnd",
        "Practice"
      ],
      "required": true,
      "default": "Practice",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "passage": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "questions": {
      "type": "dynamiczone",
      "components": [
        "rca.mcq"
      ],
      "required": true,
      "min": 1,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "assets": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "common.media",
      "required": true
    },
    "time": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "regex": "^\\d+m$",
      "default": "20m",
      "required": true
    },
    "part_A_metadata": {
      "displayName": "part_metadata",
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "rca.part-metadata",
      "required": true
    },
    "part_B_metadata": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "rca.part-metadata",
      "required": true
    }
  }
}
