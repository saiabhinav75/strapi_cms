{
  "kind": "collectionType",
  "collectionName": "question_builders",
  "info": {
    "singularName": "question-builder",
    "pluralName": "question-builders",
    "displayName": "Question_Builder",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Term": {
      "type": "integer",
      "min": 1,
      "max": 3,
      "required": true
    },
    "Class": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 10
    },
    "Curriculum_Goal": {
      "type": "string",
      "required": true
    },
    "Marks": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 10
    },
    "Question": {
      "type": "dynamiczone",
      "components": [
        "block.subjective",
        "block.mtf",
        "block.media-input",
        "block.mcq-question",
        "block.fib",
        "block.true-false",
        "block.case-base",
        "block.assertion-and-reason"
      ],
      "required": true,
      "min": 1,
      "max": 1
    },
    "Hint": {
      "type": "blocks"
    },
    "Explanation": {
      "type": "blocks"
    },
    "Negative_Marks": {
      "type": "integer",
      "required": true,
      "default": 0,
      "max": 0
    },
    "Topic": {
      "type": "string",
      "required": true
    },
    "Subtopic": {
      "type": "string"
    },
    "Stage": {
      "type": "enumeration",
      "enum": [
        "Foundational",
        "Preparatory",
        "Middle",
        "Secondary"
      ],
      "default": "Foundational",
      "required": true
    },
    "Subject": {
      "type": "enumeration",
      "enum": [
        "English",
        "Hindi",
        "Telugu",
        "EVS",
        "Mathematics",
        "Social Studies"
      ]
    }
  }
}
